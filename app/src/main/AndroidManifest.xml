<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.curvybutton">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ar"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Ar6"
            android:label="@string/title_activity_ar6"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Ar5"
            android:label="@string/title_activity_ar5"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.curvybutton.MainActivity" />
        </activity>
        <activity
            android:name=".Ar4"
            android:label="@string/title_activity_ar4"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.curvybutton.MainActivity" />
        </activity>
        <activity
            android:name=".Ar2"
            android:label="@string/title_activity_ar2"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.curvybutton.MainActivity" />
        </activity>
        <activity
            android:name=".Ar1"
            android:label="@string/title_activity_ar1"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.curvybutton.MainActivity" />
        </activity>

        <activity android:name=".MainActivity"/>
        <activity android:name=".splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
    </application>

</manifest>


